(platform (win)
    (defalias
        rosmain rctl
        losmain lctl
        rosalt ralt
        losalt lalt
        rossft rsft
        lossft lsft
        rosmet rmet
        losmet lmet
        lang (multi lctl spc)
        wordmov lctl
        m_spc (multi lalt spc)
    )
)

(platform (macos)
    (defalias
        rosmain rmet
        losmain lmet
        rosalt ralt
        losalt lalt
        rossft rsft
        lossft lsft
        rosmet rctl
        losmet lctl
        lang caps
        wordmov lalt
        m_spc  (multi @losmain spc)
    )
)

(defalias
  ;; --- Row 1 ---
  m_grv  (multi @losmain grv)
  m_1    (multi @losmain 1)
  m_2    (multi @losmain 2)
