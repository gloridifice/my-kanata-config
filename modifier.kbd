  m_]  (multi @losmain ])
  m_\  (multi @losmain \)

  ;; --- Row 3 ---
  m_caps (multi @losmain caps)
  m_a    (multi @losmain a)
  m_s    (multi @losmain s)
  m_d    (multi @losmain d)
  m_f    (multi @losmain f)
