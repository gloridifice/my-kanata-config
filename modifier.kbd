  m_l    (multi @losmain l)
  m_;  (multi @losmain ;)
  m_'  (multi @losmain ')
  m_ret  (multi @losmain ret)

  ;; --- Row 4 ---
  ;; 注意：Shift 键通常不在此处理，保持透传或单独定义
  m_z    (multi @losmain z)
  m_x    (multi @losmain x)
  m_c    (multi @losmain c)
  m_v    (multi @losmain v)
  m_b    (multi @losmain b)
  m_n    (multi @losmain n)
  m_m    (multi @losmain m)
  m_,  (multi @losmain ,)
  m_.  (multi @losmain .)
  m_/  (multi @losmain /)
)

